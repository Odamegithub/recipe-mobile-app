<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:text="Search"
        android:textAlignment="center"
        android:textSize="15pt" />

    <TableRow
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_margin="18dp"
            android:layout_weight="1"
            android:background="@drawable/button_pointed"
            android:color="@android:color/darker_gray"
            android:text="Search your recipes..."
            android:textAlignment="viewStart"
            android:textSize="20dp"
            android:contentDescription="Search Button"
            android:elevation="4dp"
            tools:ignore="TextSizeCheck" />
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="Start"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:text="@string/recent_recipes"
        android:textAlignment="viewStart"
        android:textSize="18sp" />

    <TableLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30pt"
                android:layout_marginStart="18dp"
                android:layout_weight="1"
                android:background="@drawable/button_pointed"
                android:textColor="#0B0B0A"
                android:contentDescription="Button 1"
                android:elevation="4dp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/myButton"
                android:layout_width="wrap_content"
                android:layout_height="30pt"
                android:layout_marginStart="18dp"
                android:layout_weight="1"
                android:background="@drawable/button_pointed"
                android:textColor="#131313"
                android:contentDescription="Button 2"
                android:textSize="20sp"
                android:elevation="4dp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30pt"
                android:layout_marginStart="18dp"
                android:layout_weight="1"
                android:background="@drawable/button_pointed"
                android:textColor="#121211"
                android:contentDescription="Button 3"
                android:textSize="20sp"
                android:elevation="4dp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30pt"
                android:layout_marginStart="18dp"
                android:layout_weight="1"
                android:background="@drawable/button_pointed"
                android:textColor="#0C0C0B"
                android:contentDescription="Button 4"
                android:textSize="20sp"
                android:elevation="4dp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30pt"
                android:layout_marginStart="18dp"
                android:layout_weight="1"
                android:background="@drawable/button_pointed"
                android:textColor="#070707"
                android:contentDescription="Button 5"
                android:textSize="20sp"
                android:elevation="5dp"
                tools:ignore="VisualLintButtonSize" />
        </TableRow>
    </LinearLayout>

</LinearLayout>
